<AnchorPane prefHeight="450.0" prefWidth="456.0" style="-fx-background-color: #3091E1;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.QuestionController">
   <children>
      <ImageView fx:id="image" fitHeight="136.0" fitWidth="129.0" layoutX="356.0" layoutY="307.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/icons8-question-mark-100%20(2).png" />
