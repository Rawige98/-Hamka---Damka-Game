      </ImageView>
      <Button fx:id="back" layoutX="24.0" layoutY="406.0" mnemonicParsing="false" onAction="#back" prefHeight="21.0" prefWidth="57.0" style="-fx-background-radius: 30; -fx-background-color: #FF890D;" text="back" textFill="WHITE">
         <font>
            <Font name="Berlin Sans FB Bold" size="14.0" />
         </font>
      </Button>
      <ListView fx:id="list" layoutX="24.0" layoutY="77.0" prefHeight="308.0" prefWidth="247.0" style="-fx-background-color: white;" />
      <Button fx:id="add" layoutX="286.0" layoutY="77.0" mnemonicParsing="false" onAction="#addQuestion" prefHeight="29.0" prefWidth="155.0" style="-fx-background-radius: 30; -fx-background-color: #FF890D;" text="Add Question" textFill="WHITE">
